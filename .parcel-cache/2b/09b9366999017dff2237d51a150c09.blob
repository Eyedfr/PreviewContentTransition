@media screen and (min-width: 53em) {

				body #cdawrap {
				    position: absolute;
				    --cda-left: auto;
				    --cda-right: 0;
				    --cda-width: auto;
				    --cda-bottom: auto;
				    --cda-top: 0;
				    opacity: 1 !important;
				    pointer-events: auto;
				}
				body #cdawrap .cda-footer {
					display: none;
				}

				body #cdawrap .cda-text {
					pointer-events: none;
					position: relative;
					text-align: center;
					color: transparent !important;
				}

				body #cdawrap .cda-text::before {
					color: var(--color-frame);
					pointer-events: auto;
					position: absolute;
					width: auto;
					height: 100%;
					display: flex;
					align-items: flex-end;
					justify-content: center;
					left: 50%;
					top: 0%;
					transform: translateX(-50%);
					content: "Sponsored by " attr(data-sponsor);
				}

				body #cdawrap a::after {
					display: none;
				}
			}